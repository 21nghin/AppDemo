<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_marginLeft="@dimen/dp_15"
        android:id="@+id/rl_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logo"
            android:textSize="@dimen/sp_30"
            android:fontFamily="@font/sofiapro_medium"
            android:textColor="@color/colorTim"
            android:id="@+id/tv_logo"/>
    </RelativeLayout>
    <RelativeLayout
        android:padding="20dp"
        android:id="@+id/rl_layout_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_layout">
        <TextView
            android:id="@+id/tv_for"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Forgot password"
            android:fontFamily="@font/sofiapro_medium"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/colorTim"/>
        <RelativeLayout
            android:layout_below="@+id/tv_for"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#545D91"
                android:theme="@style/LoginTextInputLayoutStyle"
                android:id="@+id/text_forgor_email">
                <com.google.android.material.textfield.TextInputEditText
                    android:padding="@dimen/dp_10"
                    android:inputType="textEmailAddress"
                    android:textColorHighlight="#545D91"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/edt_forgot_email"
                    android:hint="email address"
                    android:fontFamily="@font/sofiapro_light"
                    android:textSize="@dimen/sp_18"
                    android:drawableLeft="@drawable/new_post_24"
                    android:drawablePadding="20dp"
                    android:drawableTint="@color/colorTim"/>
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:layout_below="@+id/text_forgor_email"
                android:fontFamily="@font/sofiapro_medium"
                android:background="@drawable/shape_btn"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Send"
                android:textAllCaps="false"
                android:textSize="@dimen/sp_20"
                android:id="@+id/btn_reset_pass"
                android:padding="5dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#545D91"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/sofiapro_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dont have an account ?"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                android:id="@+id/tv_text_2"/>
            <LinearLayout
                android:gravity="center"
                android:layout_below="@id/tv_text_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign Up"
                    android:textSize="18sp"
                    android:fontFamily="@font/sofiapro_medium"
                    android:textColor="@color/colorTim"
                    android:id="@+id/tv_sign_up"/>
                <TextView
                    android:textColor="#545D91"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hare"
                    android:textSize="16sp"
                    android:fontFamily="@font/sofiapro_light"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>