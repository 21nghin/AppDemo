<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intent.MessageApp">
    <com.google.android.material.appbar.AppBarLayout
        app:liftOnScroll="true"
        style="@style/Widget.MaterialComponents.BottomAppBar"
        app:elevation="@dimen/dp_0"
        android:id="@+id/app_bar_message"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_message"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/dp_50"
                    android:layout_gravity="center|left"
                    android:layout_height="@dimen/dp_50"
                    android:src="@drawable/image_view"
                    android:id="@+id/civ_avatar_message"/>
                <ImageView
                    android:textColor="@color/white"
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:background="@drawable/text_shape"
                    android:layout_alignBottom="@+id/civ_avatar_message"
                    android:layout_alignRight="@+id/civ_avatar_message" />
                <ImageView
                    android:layout_marginRight="@dimen/dp_2"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:layout_alignBottom="@+id/civ_avatar_message"
                    android:textColor="@color/white"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:background="@drawable/shape_onlie"
                    android:layout_alignRight="@+id/civ_avatar_message" />
                <RelativeLayout
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/civ_avatar_message">
                    <TextView
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:id="@+id/tv_name_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-light"
                        android:textStyle="bold"
                        android:textColor="@color/black" />
                    <TextView
                        android:id="@+id/tv_status_message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đang hoạt động"
                        android:layout_below="@+id/tv_name_message"/>
                </RelativeLayout>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#21212121"/>
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lv_message"
            android:layout_width="match_parent"
            android:layout_above="@+id/coordinator_bottom"
            android:layout_height="match_parent" />
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_alignParentBottom="true"
            android:id="@+id/coordinator_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.bottomappbar.BottomAppBar
                android:id="@+id/id_detail_app_bar_message"
                style="@style/Widget.MaterialComponents.BottomAppBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:fabAlignmentMode="center"
                app:fabCradleMargin="@dimen/dp_8"
                app:fabCradleRoundedCornerRadius="0dp"
                app:hideOnScroll="true">
                <RelativeLayout
                    android:padding="@dimen/dp_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:layout_toLeftOf="@+id/item_message_chat"
                        android:layout_centerVertical="true"
                        android:id="@+id/edt_chat_message"
                        android:inputType="textMultiLine"
                        android:maxLines="4"
                        android:theme="@style/LoginTextInputLayoutStyle"
                        android:layout_marginRight="@dimen/dp_10"
                        android:textSize="@dimen/sp_16"
                        android:fontFamily="sans-serif-light"
                        android:padding="@dimen/dp_10"
                        android:hint="@string/edt_chat_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_comment"/>
                    <ImageView
                        android:id="@+id/item_message_chat"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_send_comment"/>

                    <ImageView
                        android:layout_marginBottom="@dimen/dp_10"
                        android:id="@+id/item_message_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:tint="@color/colorTim"
                        android:src="@drawable/ic_like_36dp" />
                </RelativeLayout>
            </com.google.android.material.bottomappbar.BottomAppBar>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </RelativeLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>