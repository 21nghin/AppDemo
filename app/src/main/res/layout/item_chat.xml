<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/dp_10"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:src="@drawable/kim_jisoo_kr"
        android:id="@+id/civ_item_avatar_chat"/>
    <ImageView
        android:visibility="invisible"
        android:id="@+id/online_item_display_icon"
        android:layout_width="@dimen/dp_19"
        android:layout_height="@dimen/dp_19"
        android:layout_alignRight="@+id/civ_item_avatar_chat"
        android:layout_alignBottom="@+id/civ_item_avatar_chat"
        android:background="@drawable/text_shape"
        android:textColor="@color/white" />

    <ImageView
        android:visibility="invisible"
        android:layout_marginRight="@dimen/dp_2"
        android:layout_marginBottom="@dimen/dp_2"
        android:id="@+id/online_item_chat_icon"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_alignRight="@+id/civ_item_avatar_chat"
        android:layout_alignBottom="@+id/civ_item_avatar_chat"
        android:background="@drawable/shape_onlie"
        android:textColor="@color/white" />
    <RelativeLayout
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/civ_item_avatar_chat">
        <TextView
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:id="@+id/tv_item_name_chat"/>
        <TextView
            android:fontFamily="sans-serif-light"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Content chat"
            android:textSize="@dimen/sp_14"
            android:layout_below="@+id/tv_item_name_chat"
            android:id="@+id/tv_item_content_chat"/>
    </RelativeLayout>
</RelativeLayout>