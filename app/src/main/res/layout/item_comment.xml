<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:src="@drawable/im_account"
        android:id="@+id/civ_comment"/>
    <RelativeLayout
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/civ_comment"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_alignParentTop="true"
            android:id="@+id/layout_rlt"
            android:padding="@dimen/dp_10"
            android:background="@drawable/shape_comment_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name comment"
                android:textSize="16sp"
                android:textStyle="bold"
                android:id="@+id/tv_name_comment_item"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Content comment and ...."
                android:layout_below="@+id/tv_name_comment_item"
                android:id="@+id/tv_content_comment_item"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 giờ"
            android:layout_below="@+id/layout_rlt"
            android:layout_marginLeft="@dimen/dp_15"
            android:id="@+id/tv_hour_ago"/>
    </RelativeLayout>
</RelativeLayout>