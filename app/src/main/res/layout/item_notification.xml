<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="@dimen/dp_10"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:src="@drawable/im_account"
        android:id="@+id/im_notif"/>
    <ImageView
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:background="@drawable/shape_bg_cmt"
        android:layout_alignBottom="@+id/im_notif"
        android:layout_alignRight="@+id/im_notif"/>
    <ImageView
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_chat_30dp"
        android:layout_alignRight="@+id/im_notif"
        android:layout_alignBottom="@+id/im_notif"/>

    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/im_notif"
        android:layout_marginLeft="@dimen/dp_10">
        <TextView
            android:id="@+id/tv_notif_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name commnet"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_notif_name"
            android:text="đã bình luận về bài viết của bạn"
            android:textSize="@dimen/sp_18"
            android:id="@+id/tv_cmt"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00/00/00"
            android:layout_below="@+id/tv_cmt"
            android:textSize="@dimen/sp_16"
            android:id="@+id/tv_date_time_notif"/>
    </RelativeLayout>
</RelativeLayout>