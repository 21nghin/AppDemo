<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intent.EditUserActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#9C27B0"
        android:id="@+id/id_edit_toolbar">
    </androidx.appcompat.widget.Toolbar>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_margin="@dimen/dp_20"
        android:layout_below="@id/id_edit_toolbar"
        android:layout_width="@dimen/dp_130"
        android:layout_height="@dimen/dp_130"
        android:src="@drawable/galaxy_slayer_zed"
        android:id="@+id/cim_avatar"/>
    <LinearLayout
        android:orientation="horizontal"
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/cim_avatar">
        <RelativeLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_alignParentTop="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_person"
                android:tint="@color/colorIcon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_23"
                android:id="@+id/icon_person"/>
            <ImageView
                android:layout_alignParentTop="true"
                android:layout_below="@+id/icon_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_email"
                android:tint="@color/colorIcon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_100"
                android:id="@+id/icon_email"/>
            <ImageView
                android:layout_alignParentTop="true"
                android:layout_below="@+id/icon_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_lock"
                android:tint="@color/colorIcon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_175"
                android:id="@+id/icon_lock"/>
            <ImageView
                android:layout_alignParentTop="true"
                android:layout_below="@+id/icon_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_lock"
                android:tint="@color/colorIcon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_250"
                android:id="@+id/icon_retype_lock"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_weight="6">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_user_edit_name">
                <EditText
                    android:fontFamily="sans-serif-light"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/edt_user_edit_name"
                    android:textSize="@dimen/sp_18"
                    android:hint="@string/hint_username"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_below="@id/text_user_edit_name"
                android:layout_height="wrap_content"
                android:id="@+id/text_user_email">
                <EditText
                    android:fontFamily="sans-serif-light"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/edt_user_email"
                    android:textSize="@dimen/sp_18"
                    android:hint="@string/hint_email"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="@dimen/dp_20"
                app:passwordToggleEnabled="true"
                android:layout_width="match_parent"
                android:layout_below="@id/text_user_email"
                android:layout_height="wrap_content"
                android:id="@+id/text_user_change_password">
                <EditText
                    android:inputType="textVisiblePassword"
                    android:fontFamily="sans-serif-light"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/edt_user_change_password"
                    android:textSize="@dimen/sp_18"
                    android:hint="@string/hint_change_password"/>
            </com.google.android.material.textfield.TextInputLayout><com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_below="@id/text_user_change_password"
                app:passwordToggleEnabled="true"
                android:layout_height="wrap_content"
                android:id="@+id/text_user_retype_pass">
                <EditText
                    android:inputType="textVisiblePassword"
                    android:fontFamily="sans-serif-light"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/edt_user_retype_password"
                    android:textSize="@dimen/sp_18"
                    android:hint="@string/hint_retype_password"/>
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_user_retype_pass"
                android:text="@string/btn_user_save_password"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/dp_20"
                android:background="#9C27B0"
                android:padding="@dimen/dp_15"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:id="@+id/btn_change_pass"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>