<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="3dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/ln_item_cmt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/rl_image_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imv_image_item_job"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/infotect_jobs" />

                    <TextView
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_alignTop="@+id/imv_image_item_job"
                        android:padding="15dp"
                        android:id="@+id/tv_title_item_job"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/sofiapro_medium"
                        android:text="@string/job_title"
                        android:textStyle="bold"
                        android:textColor="@color/colorTim"
                        android:textSize="@dimen/sp_20" />
                </RelativeLayout>

                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:fontFamily="@font/sofiapro_light"
                        android:id="@+id/tv_intro_item_job"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:lines="2"
                        android:text="@string/job_review"
                        android:textColor="#000" />


                    <RelativeLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:fontFamily="@font/sofiapro_light"
                            android:id="@+id/tv_date_item_job"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dateUpload" />
                        <TextView
                            android:fontFamily="@font/sofiapro_light"
                            android:id="@+id/tv_status_item_job"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="@string/jobstatus"
                            android:textColor="#8BC34A"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#000"
                />
            <RelativeLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_alignParentLeft="true"
                    android:id="@+id/rl_item_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:layout_centerVertical="true"
                        android:scaleType="center"
                        android:background="#fff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_likedefault"
                        android:id="@+id/imgbtn_like_item_job"/>
                    <TextView
                        android:fontFamily="@font/sofiapro_light"
                        android:layout_marginLeft="5dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/imgbtn_like_item_job"
                        android:id="@+id/tv_number_like_item_job"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12" />
                    <TextView
                        android:fontFamily="@font/sofiapro_light"
                        android:layout_marginLeft="3dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/tv_number_like_item_job"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/like" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/rl_item_2"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/imv_cmt_item_job"
                        android:scaleType="center"
                        android:background="#fff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_comment"
                        />
                    <TextView
                        android:fontFamily="@font/sofiapro_light"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/imv_cmt_item_job"
                        android:id="@+id/tv_number_comment_item_job"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="12"/>
                    <TextView
                        android:fontFamily="@font/sofiapro_light"
                        android:layout_marginLeft="3dp"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_number_comment_item_job"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/comment"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_alignParentRight="true"
                    android:id="@+id/rl_item_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:layout_centerVertical="true"
                        android:id="@+id/imgbtn_share_item_job"
                        android:scaleType="center"
                        android:background="#fff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_sharedefault"/>
                    <TextView
                        android:fontFamily="@font/sofiapro_light"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/imgbtn_share_item_job"
                        android:id="@+id/tv_number_share_item_job"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12"/>
                    <TextView
                        android:fontFamily="@font/sofiapro_light"
                        android:layout_marginLeft="3dp"
                        android:layout_toRightOf="@+id/tv_number_share_item_job"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/share"/>
                </RelativeLayout>
            </RelativeLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>